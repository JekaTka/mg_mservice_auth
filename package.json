{
  "name": "mg_mservice_auth",
  "version": "1.0.0",
  "description": "Auth microservice",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand --forceExit",
    "start": "node ./src/server.js",
    "docker:development": "docker-compose -f docker-compose.yml -f development.yml build && docker-compose -f docker-compose.yml -f development.yml up",
    "docker:test": "docker-compose -p mgmserviceauthtest -f docker-compose.yml -f testing.yml run mg_mservice_auth test",
    "docker:build": "docker build -t mg_mservice_auth .",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "NodeJS",
    "Express",
    "JavaScript",
    "Mocha",
    "Chai",
    "Jest",
    "MongoDB"
  ],
  "author": "Jenya Tkachenko",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "express-validation": "^1.0.2",
    "helmet": "^3.12.0",
    "http-status": "^1.0.1",
    "joi": "^13.1.2",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.11",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "jest": "^22.4.2",
    "nodemon": "^1.17.2",
    "superagent": "^3.8.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/__tests__/mocks/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/**/*.js",
      "!**/src/server.js",
      "!**/src/app.js"
    ]
  }
}
